:javascript
  Stormy.postData = #{@posts.to_json};

  $(document).ready(Stormy.load);
  $(document).bind("page:change",Stormy.load);

#posts-content

%script(type="handlebars" id="stormy-index")
  %section#post-frame
    #left-content
      .filter
        %a(href="#") All
        %a(href="#") Published
        %a(href="#") Draft
      .links
        %a(href="#") New Post
      %ul#post-list
    #right-content
      .links
        %a(href="#") Edit
        %a(href="#") Save
      #post-editor
    .clear


%script(type="handlebars" id="stormy-post")
  %h2 {{name}}
  .date {{date}}
  .permalink {{permalink}}
  .views {{views}}

